@using Microsoft.AspNet.Identity
@using Microsoft.AspNet.Identity.EntityFramework
@using Xomorod.com.Models

@{
    string hangfireDashboardUrl = "";
#if DEBUG
    hangfireDashboardUrl = @"http://localhost:7911/BackgroundJobs";
#else
    hangfireDashboardUrl = @"http://api.xomorod.com/BackgroundJobs";
#endif
}

@if (Request.IsAuthenticated)
{
    var manager = new UserManager<ApplicationUser>(new UserStore<ApplicationUser>(new ApplicationDbContext()));
    var currentUser = manager.FindById(User.Identity.GetUserId());

    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="glyphicon glyphicon-user"></span> @currentUser.UserName  <span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li>
                        <a id="profileLink" href="#">
                            <span class="glyphicon glyphicon-user">&nbsp;Profile</span>
                        </a>
                    </li>
                    <li>
                        <a id="inboxLink" href="#">
                            <span class="glyphicon glyphicon-envelope">&nbsp;Inbox</span>
                        </a>
                    </li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li>
                            <a id="settingLink" href="@Url.Content(@"~/errorsmanager")">
                                <span class="glyphicon glyphicon-exclamation-sign">&nbsp;Errors</span>
                            </a>
                        </li>
                        
                        <li>
                            <a id="settingLink" href="@Url.Content(hangfireDashboardUrl)">
                                <span class="glyphicon glyphicon-fire">&nbsp;Background Jobs</span>
                            </a>
                        </li>
                    }
                    <li>
                        <a id="settingLink" href="@Url.Action("Index", "Manage", routeValues: null)">
                            <span class="glyphicon glyphicon-cog">&nbsp;Setting</span>
                        </a>
                    </li>
                    <li role="separator" class="divider"></li>
                    <li>
                        <a href="javascript:document.getElementById('logoutForm').submit()">
                            <span class="glyphicon glyphicon-log-out"></span>&nbsp;LogOut
                        </a>
                    </li>
                </ul>
            </li>

        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            <a id="registerLink" href="@Url.Action("Register", "Account", routeValues: null)">
                <span class="glyphicon glyphicon-user">  Register</span>
            </a>
        </li>
        <li>
            <a id="loginLink" href="@Url.Action("Login", "Account", routeValues: null)">
                Login&nbsp;<span class="glyphicon glyphicon-log-in"></span>
            </a>
        </li>
    </ul>
}